<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/sdv_id"
        android:layout_toRightOf="@+id/sdv_id"
        android:text="标题"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/pirce_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_id"
        android:layout_alignStart="@+id/tv_id"
        android:layout_centerVertical="true"
        android:text="价格"
        android:textSize="20sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:failureImage="@drawable/ic_launcher_background"
        app:placeholderImage="@mipmap/ic_launcher" />

        />
</RelativeLayout>